import cv2
print(cv2.__version__)

capture = cv2.VideoCapture(0)
capture.set(80, 640)
capture.set(80, 480)

x = 0
dx = 1
y = 0
dy = 1


while True:
    success, img = capture.read()
    cv2.rectangle(img, (x, y), (x + 80, y + 80), (255, 50, 100), 4)
    x = x + dx
    y = y + dy
    if x >= 200 or x <= 0:
        dx = dx * (-1)
        if y >= 800 or y <= 0:
            dy = dy * (-1)

    cv2.imshow('Frame', img)
    if cv2.waitKey(20) & 0xff == ord('q'):
        break

capture.release()
cv2.destroyAllWindows()